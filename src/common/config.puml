' Global PlantUML configuration
' This file is injected via -config flag in the workflow

' General appearance
skinparam backgroundColor white
skinparam shadowing false
skinparam dpi 150
skinparam roundcorner 8

' Typography
skinparam DefaultFontName "DejaVu Sans"
skinparam DefaultFontSize 12

' Arrow styling
skinparam ArrowColor #333333
skinparam ArrowThickness 1.5

' Component styling
skinparam ComponentStyle rectangle
skinparam ComponentBorderColor #666666
skinparam ComponentBackgroundColor #F5F5F5

' Package styling
skinparam PackageBorderColor #888888
skinparam PackageBackgroundColor #FAFAFA

' Database styling
skinparam DatabaseBorderColor #666666
skinparam DatabaseBackgroundColor #E8F4E8

' Sequence diagram styling
skinparam SequenceMessageAlignment center
skinparam SequenceLifeLineBorderColor #888888
skinparam SequenceParticipantBorderColor #666666
skinparam SequenceParticipantBackgroundColor #F0F0F0

' Class diagram styling
skinparam ClassBorderColor #666666
skinparam ClassBackgroundColor #FFFFEE
skinparam ClassAttributeFontColor #333333

' Note styling
skinparam NoteBorderColor #CCCC00
skinparam NoteBackgroundColor #FFFFCC
