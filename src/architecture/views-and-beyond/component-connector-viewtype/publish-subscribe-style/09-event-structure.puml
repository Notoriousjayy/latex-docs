@startuml
skinparam backgroundColor #FEFEFE
skinparam defaultFontName Helvetica
skinparam defaultFontSize 11
skinparam componentStyle rectangle

skinparam package {
    BackgroundColor #FFFFFF
    BorderColor #333333
}

skinparam component {
    BackgroundColor #EEEEEE
    BorderColor #888888
}

title Event Structure Anatomy\nKey components of a well-designed event

package "EVENT" {
    component "HEADERS\n(Routing & Processing)\n====================\nContent-Type\nCorrelation-ID\nPartition-Key\nPriority" as H #F5A623
    
    component "METADATA\n(Identity & Context)\n====================\nEvent ID (unique)\nEvent Type/Topic\nTimestamp\nSource Identifier\nSchema Version" as M #4A90D9
    
    component "PAYLOAD\n(Domain Data)\n====================\nBusiness-specific\ncontent structured\naccording to\nevent schema" as P #5BAE5B
}

note right of H
  Used by connector
  for routing decisions
end note

note right of M
  Identifies the event
  and its origin
end note

note right of P
  The "what happened"
  domain information
end note

H -[hidden]down- M
M -[hidden]down- P

@enduml
