@startuml 03-connector-types
!theme plain
skinparam backgroundColor #FEFEFE
skinparam defaultFontName Arial
skinparam defaultFontSize 10

skinparam rectangle {
    BorderThickness 2
}

title Types of Connectors in C&C Views

rectangle "Connector Types" {
    
    together {
        rectangle "**Procedure Call**\n\nRequest/reply interaction\nSynchronous invocation\n\n//Local calls, RPC,//\n//Method invocation//" as proc #FFF8E1 {
        }
        
        rectangle "**Event**\n\nPublish-subscribe\nAsynchronous notification\n\n//Event bus, Message queue,//\n//Notification service//" as event #E8F5E9 {
        }
        
        rectangle "**Data Access**\n\nInteraction with data stores\nRead/write/query operations\n\n//Database, File system,//\n//Memory access//" as data #E3F2FD {
        }
    }
    
    together {
        rectangle "**Stream**\n\nContinuous data flow\nSequence of data items\n\n//Pipes, Sockets,//\n//Data streams//" as stream #FCE4EC {
        }
        
        rectangle "**Arbitrator**\n\nCoordinates shared access\nManages concurrency\n\n//Locks, Semaphores,//\n//Transaction managers//" as arb #F3E5F5 {
        }
    }
    
    together {
        rectangle "**Adaptor**\n\nTranslates interfaces\nFormat conversion\n\n//Protocol adapter,//\n//Data transformer//" as adapt #ECEFF1 {
        }
        
        rectangle "**Distributor**\n\nRoutes interactions\nDirects to handlers\n\n//Load balancer, Router,//\n//Dispatcher//" as dist #FFF3E0 {
        }
    }
}

proc -[hidden]r-> event
event -[hidden]r-> data
stream -[hidden]r-> arb
adapt -[hidden]r-> dist

legend bottom
  Connectors define **how** components interact.
  Each type supports different interaction patterns.
endlegend

@enduml
