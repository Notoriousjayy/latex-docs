@startuml 04-cc-relations
!theme plain
skinparam backgroundColor #FEFEFE
skinparam defaultFontName Arial
skinparam defaultFontSize 11

skinparam component {
    BackgroundColor #E3F2FD
    BorderColor #1565C0
    BorderThickness 2
}

skinparam rectangle {
    BorderThickness 2
}

title Relations in C&C Views

rectangle "**1. Attachment Relation**\nConnects ports to connector roles" as att {
    component "Component" as c1 {
        portout "port" as p1
    }
    rectangle "<<connector>>" as con1 #FFF8E1
    component "Component" as c2 {
        portin "port" as p2
    }
    
    p1 --> con1 : attaches
    con1 --> p2 : attaches
}

rectangle "**2. Interface Delegation**\nMaps external ports to internal ports" as del {
    component "Composite Component" as comp {
        portin "External\nPort" as ext
        
        component "Sub-\nComponent" as sub {
            portin "Internal\nPort" as int
        }
    }
    ext ..> int : delegates to
}

rectangle "**3. Containment Relation**\nHierarchical composition" as cont {
    component "Container" as container {
        component "Contained A" as ca #C8E6C9
        component "Contained B" as cb #C8E6C9
    }
}

rectangle "**4. Communication (Derived)**\nCan communicate if connected via path" as comm {
    component "A" as a1 #E3F2FD
    rectangle " " as mid #FFF8E1
    component "B" as a2 #E3F2FD
    
    a1 --> mid
    mid --> a2
    
    a1 <..> a2 : can communicate\n(derived relation)
}

att -[hidden]d-> del
del -[hidden]d-> cont
cont -[hidden]d-> comm

@enduml
