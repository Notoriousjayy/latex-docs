@startuml 02-component-types
!theme plain
skinparam backgroundColor #FEFEFE
skinparam defaultFontName Arial
skinparam defaultFontSize 11

skinparam rectangle {
    BorderThickness 2
}

skinparam component {
    BorderThickness 2
}

title Types of Components in C&C Views

rectangle "Component Types" as main {
    
    rectangle "**Processing Component**\n\nPerforms computation\nTransforms inputs to outputs\nImplements business logic" as proc #E3F2FD {
    }
    
    rectangle "**Data Store Component**\n\nMaintains persistent state\nProvides storage/retrieval\nShared data repository" as data #C8E6C9 {
    }
    
    rectangle "**Controller Component**\n\nManages system behavior\nCoordinates other components\nResponds to events" as ctrl #FFF9C4 {
    }
    
    rectangle "**Interface Component**\n\nHandles external interaction\nUser interfaces\nSystem interfaces" as intf #FFCCBC {
    }
    
    rectangle "**Composite Component**\n\nContains subarchitecture\nExposes unified interface\nHierarchical decomposition" as comp #E1BEE7 {
    }
}

proc -[hidden]right-> data
data -[hidden]right-> ctrl
ctrl -[hidden]down-> intf
intf -[hidden]left-> comp

legend right
  |= Type |= Primary Role |
  | Processing | Computation |
  | Data Store | State management |
  | Controller | Coordination |
  | Interface | External interaction |
  | Composite | Hierarchical structure |
endlegend

@enduml
