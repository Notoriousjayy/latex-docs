@startuml
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false
skinparam roundCorner 5

skinparam package {
    BackgroundColor #FAFAFA
    BorderColor #757575
}

skinparam rectangle {
    BackgroundColor #E3F2FD
    BorderColor #1976D2
}

title Client and Server Component Types

package "Client Components" {
    rectangle "Thin Client\n<size:9>(Browser-based, UI only)</size>" as TC #E3F2FD
    rectangle "Thick Client\n<size:9>(Desktop app, local logic)</size>" as ThC #BBDEFB
    rectangle "Rich Client\n<size:9>(Balanced, offline capable)</size>" as RC #90CAF9
    rectangle "Headless Client\n<size:9>(Batch/Agent, no UI)</size>" as HC #64B5F6
    rectangle "Mobile Client\n<size:9>(Intermittent, limited)</size>" as MC #42A5F5
    rectangle "Server as Client\n<size:9>(Multi-tier consumer)</size>" as SC #2196F3
}

package "Server Components" {
    rectangle "Web Server\n<size:9>(HTTP/HTTPS, static)</size>" as WS #E8F5E9
    rectangle "Application Server\n<size:9>(Business logic)</size>" as AS #C8E6C9
    rectangle "Database Server\n<size:9>(Data storage)</size>" as DS #A5D6A7
    rectangle "API Server\n<size:9>(REST/GraphQL)</size>" as APIS #81C784
    rectangle "Cache Server\n<size:9>(Fast access)</size>" as CS #66BB6A
    rectangle "Auth Server\n<size:9>(Identity/Authorization)</size>" as AUS #4CAF50
}

TC -[hidden]r- ThC
ThC -[hidden]r- RC
RC -[hidden]r- HC
HC -[hidden]r- MC
MC -[hidden]r- SC

WS -[hidden]r- AS
AS -[hidden]r- DS
DS -[hidden]r- APIS
APIS -[hidden]r- CS
CS -[hidden]r- AUS
@enduml
