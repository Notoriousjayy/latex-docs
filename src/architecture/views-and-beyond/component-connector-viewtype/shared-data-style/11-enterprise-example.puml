@startuml
skinparam backgroundColor #FEFEFE
skinparam defaultFontSize 11
skinparam defaultFontName Arial
skinparam shadowing false

skinparam component {
    BorderColor #455A64
}

skinparam database {
    BackgroundColor #FFF3E0
    BorderColor #E65100
}

title Enterprise Application Pattern\nMultiple accessors sharing single database

database "Enterprise Database" as db #FFF3E0 {
    rectangle "Customers" as tblCust #FFECB3
    rectangle "Orders" as tblOrders #FFECB3
    rectangle "Products" as tblProducts #FFECB3
    rectangle "Inventory" as tblInv #FFECB3
}

rectangle "Interactive Applications" as interactive #E3F2FD {
    [Web\nApplication] as webapp #BBDEFB
    [Mobile\nApp] as mobile #BBDEFB
    [Admin\nPortal] as admin #BBDEFB
}

rectangle "Background Processing" as background #E8F5E9 {
    [Batch\nJobs] as batch #C8E6C9
    [Scheduled\nReports] as reports #C8E6C9
}

rectangle "Integration Layer" as integration #F3E5F5 {
    [Partner\nAPI] as partnerApi #E1BEE7
    [Data\nExport] as export #E1BEE7
}

webapp --> db : CRUD
mobile --> db : CRUD
admin --> db : Admin ops

batch --> db : Bulk\nprocessing
reports --> db : Read-only\nqueries

partnerApi --> db : API queries
export --> db : Extract

note right of db
  Single Source of Truth
  ACID transactions
  Referential integrity
  Shared schema
end note

note bottom of interactive
  Benefits: Consistency, SQL joins, familiar tooling
  Challenges: Bottleneck risk, schema coupling
end note

legend bottom
  Traditional enterprise architecture with
  centralized relational database
endlegend

@enduml
