@startuml
skinparam backgroundColor #FEFEFE
skinparam defaultFontSize 11
skinparam defaultFontName Arial
skinparam shadowing false

skinparam component {
    BorderColor #455A64
    FontColor #263238
}

skinparam database {
    BackgroundColor #FFF3E0
    BorderColor #E65100
    FontColor #BF360C
}

title Data Accessor Component Types\nClassified by read/write patterns

database "Shared\nRepository" as repo

rectangle "Data Producers" #E8F5E9 {
    [Data Entry\nApplication] as entry #C8E6C9
    [ETL\nProcess] as etl #C8E6C9
    [Event\nCollector] as events #C8E6C9
}

rectangle "Data Consumers" #E3F2FD {
    [Reporting\nTool] as report #BBDEFB
    [Analytics\nEngine] as analytics #BBDEFB
    [Dashboard\nUI] as dashboard #BBDEFB
}

rectangle "Data Transformers" #F3E5F5 {
    [Data Quality\nProcessor] as quality #E1BEE7
    [Aggregation\nJob] as aggregation #E1BEE7
}

rectangle "Interactive Applications" #FFF8E1 {
    [Business\nApplication] as bizapp #FFECB3
    [CRUD\nService] as crud #FFECB3
}

rectangle "Background Processes" #ECEFF1 {
    [Maintenance\nJob] as maintenance #CFD8DC
    [Sync\nAgent] as sync #CFD8DC
}

entry --> repo : write
etl --> repo
events --> repo

repo --> report : read
repo --> analytics
repo --> dashboard

repo <--> quality : read/write
repo <--> aggregation

repo <--> bizapp : bidirectional
repo <--> crud

repo <..> maintenance : scheduled
repo <..> sync

legend right
  | Color | Access Pattern |
  |<#E8F5E9>| Write-only |
  |<#E3F2FD>| Read-only |
  |<#F3E5F5>| Transform (R/W) |
  |<#FFF8E1>| Interactive |
  |<#ECEFF1>| Background |
endlegend

@enduml
