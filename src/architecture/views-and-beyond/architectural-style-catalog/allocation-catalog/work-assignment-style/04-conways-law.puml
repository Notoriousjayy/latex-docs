@startuml 04-conways-law
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam padding 8
skinparam nodesep 25
skinparam ranksep 30

skinparam rectangle {
    BackgroundColor<<org>> #FFF3E0
    BorderColor<<org>> #EF6C00
    BackgroundColor<<sw>> #E3F2FD
    BorderColor<<sw>> #1565C0
    RoundCorner 8
}

skinparam package {
    BackgroundColor #FAFAFA
    BorderColor #BDBDBD
}

title <b>Conway's Law</b>\nOrganization Structure Mirrors System Architecture

package "Organization Structure" as org_pkg {
    rectangle "Frontend\nTeam" as fe_team <<org>>
    rectangle "Backend\nTeam" as be_team <<org>>
    rectangle "Data\nTeam" as data_team <<org>>
    
    fe_team <-[#EF6C00,dashed]-> be_team : communication
    be_team <-[#EF6C00,dashed]-> data_team : communication
}

package "System Architecture" as sys_pkg {
    rectangle "Frontend\nService" as fe_svc <<sw>>
    rectangle "Backend\nAPI" as be_svc <<sw>>
    rectangle "Data\nLayer" as data_svc <<sw>>
    
    fe_svc -[#1565C0]-> be_svc : API calls
    be_svc -[#1565C0]-> data_svc : queries
}

fe_team .[#546E7A,dotted].> fe_svc
be_team .[#546E7A,dotted].> be_svc
data_team .[#546E7A,dotted].> data_svc

note bottom of org_pkg
  <b>Conway's Law (1967):</b>
  "Organizations design systems that
  mirror their communication structures"
end note

note bottom of sys_pkg
  <b>Implication:</b>
  Team boundaries become API boundaries
  Inter-team deps become inter-module deps
end note

@enduml
