@startuml 02-element-types
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam padding 8
skinparam nodesep 30
skinparam ranksep 25

skinparam rectangle {
    BackgroundColor<<header>> #ECEFF1
    BorderColor<<header>> #607D8B
    BackgroundColor<<sw>> #E3F2FD
    BorderColor<<sw>> #1565C0
    BackgroundColor<<org>> #FFF3E0
    BorderColor<<org>> #EF6C00
    RoundCorner 6
}

title <b>Element Types in Work Assignment</b>\nGranularity from Coarse to Fine

rectangle "**SOFTWARE ELEMENTS**\n(Units of code requiring effort)" as sw_head <<header>>

rectangle "Subsystems" as subsys <<sw>>
rectangle "Services" as svc <<sw>>
rectangle "Components" as comp <<sw>>
rectangle "Libraries" as lib <<sw>>
rectangle "Modules" as mod <<sw>>
rectangle "Files/Classes" as files <<sw>>

sw_head -[hidden]d-> subsys
subsys -[#78909C]d-> svc : <size:10>finer</size>
svc -[#78909C]d-> comp : <size:10>finer</size>
comp -[#78909C]d-> lib : <size:10>finer</size>
lib -[#78909C]d-> mod : <size:10>finer</size>
mod -[#78909C]d-> files : <size:10>finer</size>

rectangle "**ORGANIZATIONAL ELEMENTS**\n(Units providing capacity)" as org_head <<header>>

rectangle "Divisions" as div <<org>>
rectangle "Departments" as dept <<org>>
rectangle "Teams" as team <<org>>
rectangle "Individuals" as indiv <<org>>

org_head -[hidden]d-> div
div -[#78909C]d-> dept : <size:10>smaller</size>
dept -[#78909C]d-> team : <size:10>smaller</size>
team -[#78909C]d-> indiv : <size:10>smaller</size>

note right of subsys
  Bounded contexts,
  major functionality
end note

note right of team
  5-12 people,
  shared goals
end note

@enduml
