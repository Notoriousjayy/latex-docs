@startuml 08-ecommerce-example

skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 10
skinparam shadowing false

skinparam package {
    BackgroundColor white
    BorderColor #90A4AE
}

skinparam rectangle {
    BackgroundColor #E3F2FD
    BorderColor #1976D2
}

title **E-Commerce Platform Work Assignment**\nTeams Own Business Capabilities

' Define team packages with their owned modules
package "**Catalog Team**" as catTeam #E8F5E9 {
    rectangle "Product Info" as prod
    rectangle "Categories" as cat
    rectangle "Search" as search
    rectangle "Recommendations" as rec
}

package "**Cart Team**" as cartTeam #E3F2FD {
    rectangle "Shopping Cart" as cart
    rectangle "Wish Lists" as wish
    rectangle "Save for Later" as save
}

package "**Checkout Team**" as checkTeam #FFF3E0 {
    rectangle "Payment Processing" as pay
    rectangle "Order Creation" as order
    rectangle "Confirmation" as conf
}

package "**Fulfillment Team**" as fulfTeam #F3E5F5 {
    rectangle "Inventory" as inv
    rectangle "Shipping" as ship
    rectangle "Tracking" as track
}

package "**Customer Team**" as custTeam #FFEBEE {
    rectangle "Accounts" as acct
    rectangle "Authentication" as auth
    rectangle "Profiles" as prof
}

package "**Platform Team**" as platTeam #E0E0E0 {
    rectangle "Infrastructure" as infra
    rectangle "Deployment" as deploy
    rectangle "Monitoring" as mon
}

' Key dependencies (simplified)
cart -[#546E7A,dashed]-> prod : reads
order -[#546E7A,dashed]-> cart : reads
order -[#546E7A,dashed]-> inv : reserves
ship -[#546E7A,dashed]-> order : fulfills

' Platform supports all
platTeam .[#78909C,dotted]..> catTeam
platTeam .[#78909C,dotted]..> cartTeam
platTeam .[#78909C,dotted]..> checkTeam

note bottom
Each team owns full stack for their capability
Cross-team dependencies minimized through APIs
Platform Team enables rather than blocks
end note

@enduml
