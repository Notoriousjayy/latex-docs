@startuml 09-ecommerce-example
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 10
skinparam padding 8
skinparam nodesep 25
skinparam ranksep 20

skinparam rectangle {
    BackgroundColor<<catalog>> #E8F5E9
    BorderColor<<catalog>> #388E3C
    BackgroundColor<<cart>> #E3F2FD
    BorderColor<<cart>> #1565C0
    BackgroundColor<<checkout>> #FFF3E0
    BorderColor<<checkout>> #EF6C00
    BackgroundColor<<fulfill>> #F3E5F5
    BorderColor<<fulfill>> #7B1FA2
    BackgroundColor<<customer>> #FFEBEE
    BorderColor<<customer>> #C62828
    BackgroundColor<<platform>> #ECEFF1
    BorderColor<<platform>> #546E7A
    RoundCorner 8
}

title <b>E-Commerce Platform Work Assignment</b>\nTeams Organized by Business Capability

rectangle "**Catalog Team**" as cat_team <<catalog>> {
    rectangle "Products" as prod <<catalog>>
    rectangle "Categories" as cat <<catalog>>
    rectangle "Search" as search <<catalog>>
}

rectangle "**Cart Team**" as cart_team <<cart>> {
    rectangle "Shopping Cart" as cart <<cart>>
    rectangle "Wish Lists" as wish <<cart>>
}

rectangle "**Checkout Team**" as check_team <<checkout>> {
    rectangle "Payments" as pay <<checkout>>
    rectangle "Orders" as ord <<checkout>>
}

rectangle "**Fulfillment Team**" as fulfill_team <<fulfill>> {
    rectangle "Inventory" as inv <<fulfill>>
    rectangle "Shipping" as ship <<fulfill>>
}

rectangle "**Customer Team**" as cust_team <<customer>> {
    rectangle "Accounts" as acct <<customer>>
    rectangle "Auth" as auth <<customer>>
}

rectangle "**Platform Team**" as plat_team <<platform>> {
    rectangle "Infrastructure" as infra <<platform>>
    rectangle "Monitoring" as mon <<platform>>
    rectangle "CI/CD" as cicd <<platform>>
}

search -[#78909C,dashed]-> prod
cart -[#78909C,dashed]-> prod
pay -[#78909C,dashed]-> cart
ord -[#78909C,dashed]-> inv

plat_team -[#546E7A,dotted]-> cat_team
plat_team -[#546E7A,dotted]-> cart_team
plat_team -[#546E7A,dotted]-> check_team

note bottom
  Each team owns full stack for their capability.
  Platform team enables rather than blocks.
  Cross-team dependencies minimized through APIs.
end note

@enduml
