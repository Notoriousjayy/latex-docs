@startuml 03-relations
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam padding 10
skinparam nodesep 40
skinparam ranksep 35

skinparam rectangle {
    BackgroundColor<<sw>> #E3F2FD
    BorderColor<<sw>> #1565C0
    BackgroundColor<<org>> #FFF3E0
    BorderColor<<org>> #EF6C00
    BackgroundColor<<mgmt>> #F3E5F5
    BorderColor<<mgmt>> #7B1FA2
    RoundCorner 8
}

title <b>Relations in the Work Assignment Style</b>\nHow Elements Connect and Interact

rectangle "Module A" as mod_a <<sw>>
rectangle "Module B" as mod_b <<sw>>
rectangle "Module C" as mod_c <<sw>>

rectangle "Team Alpha" as team_a <<org>>
rectangle "Team Beta" as team_b <<org>>
rectangle "Platform Team" as team_p <<org>>

rectangle "Engineering\nDirector" as dir <<mgmt>>

mod_a -[#1565C0,bold]-> team_a : <b>allocated-to</b>\n//development//
mod_b -[#1565C0,bold]-> team_b : <b>allocated-to</b>\n//ownership//
mod_c -[#1565C0,bold]-> team_p : <b>allocated-to</b>\n//maintenance//

team_a -[#7B1FA2,dashed]-> dir : reports-to
team_b -[#7B1FA2,dashed]-> dir : reports-to
team_p -[#7B1FA2,dashed]-> dir : reports-to

team_a <-[#43A047,dotted]-> team_b : collaborates-with

team_p -[#FF8F00,dotted]-> team_a : supports
team_p -[#FF8F00,dotted]-> team_b : supports

mod_a -[#90A4AE]-> mod_c : depends-on
mod_b -[#90A4AE]-> mod_c : depends-on

legend right
  |= Relation |= Meaning |
  | allocated-to | Responsibility assignment |
  | reports-to | Management hierarchy |
  | collaborates-with | Team coordination |
  | supports | Service provision |
  | depends-on | Software dependency |
endlegend

@enduml
