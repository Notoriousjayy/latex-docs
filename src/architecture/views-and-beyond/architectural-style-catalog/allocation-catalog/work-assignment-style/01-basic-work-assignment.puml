@startuml 01-basic-work-assignment
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 12
skinparam padding 10
skinparam nodesep 50
skinparam ranksep 40

skinparam rectangle {
    BackgroundColor<<software>> #E3F2FD
    BorderColor<<software>> #1565C0
    BackgroundColor<<org>> #FFF3E0
    BorderColor<<org>> #EF6C00
    RoundCorner 8
}

skinparam arrow {
    Color #546E7A
    Thickness 2
}

title <b>Work Assignment Overview</b>\nMapping Software Elements to Development Teams

together {
    rectangle "**Software Elements**\n(What needs to be built)" as sw <<software>> {
        rectangle "Subsystem A" as sub_a <<software>>
        rectangle "Service B" as svc_b <<software>>
        rectangle "Library C" as lib_c <<software>>
    }
}

together {
    rectangle "**Organizational Elements**\n(Who builds and maintains)" as org <<org>> {
        rectangle "Team Alpha" as team_a <<org>>
        rectangle "Team Beta" as team_b <<org>>
        rectangle "Platform Team" as team_p <<org>>
    }
}

sub_a -[#1565C0,thickness=2]-> team_a : <<allocated-to>>
svc_b -[#1565C0,thickness=2]-> team_b : <<allocated-to>>
lib_c -[#1565C0,thickness=2]-> team_p : <<allocated-to>>

note bottom of sw
  Modules, components, services
  requiring development effort
end note

note bottom of org
  Individuals, teams, departments
  providing development capacity
end note

@enduml
