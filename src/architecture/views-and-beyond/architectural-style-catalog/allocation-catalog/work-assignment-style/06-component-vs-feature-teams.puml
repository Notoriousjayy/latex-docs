@startuml 06-component-vs-feature-teams
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 10
skinparam padding 6
skinparam nodesep 20
skinparam ranksep 25

skinparam package {
    BackgroundColor #FAFAFA
    BorderColor #BDBDBD
}

skinparam rectangle {
    BackgroundColor<<ui>> #BBDEFB
    BorderColor<<ui>> #1976D2
    BackgroundColor<<api>> #C8E6C9
    BorderColor<<api>> #388E3C
    BackgroundColor<<db>> #FFE0B2
    BorderColor<<db>> #F57C00
    BackgroundColor<<team>> #F5F5F5
    BorderColor<<team>> #757575
    RoundCorner 6
}

title <b>Component Teams vs Feature Teams</b>\nTwo Patterns for Work Assignment

package "COMPONENT TEAMS" as comp_pkg {
    rectangle "UI Team" as ui_team <<team>> {
        rectangle "UI Layer" as ui <<ui>>
    }
    rectangle "API Team" as api_team <<team>> {
        rectangle "API Layer" as api <<api>>
    }
    rectangle "Data Team" as data_team <<team>> {
        rectangle "Data Layer" as db <<db>>
    }
    
    ui -[hidden]d-> api
    api -[hidden]d-> db
    
    note right of comp_pkg
      <b>Pros:</b> Deep expertise
      <b>Cons:</b> Handoffs between teams
    end note
}

package "FEATURE TEAMS" as feat_pkg {
    rectangle "Payments Team" as pay_team <<team>> {
        rectangle "Pay UI" as pay_ui <<ui>>
        rectangle "Pay API" as pay_api <<api>>
        rectangle "Pay DB" as pay_db <<db>>
    }
    rectangle "Catalog Team" as cat_team <<team>> {
        rectangle "Cat UI" as cat_ui <<ui>>
        rectangle "Cat API" as cat_api <<api>>
        rectangle "Cat DB" as cat_db <<db>>
    }
    
    pay_ui -[hidden]d-> pay_api
    pay_api -[hidden]d-> pay_db
    cat_ui -[hidden]d-> cat_api
    cat_api -[hidden]d-> cat_db
    
    note right of feat_pkg
      <b>Pros:</b> End-to-end ownership
      <b>Cons:</b> Requires broad skills
    end note
}

comp_pkg -[hidden]r-> feat_pkg

legend bottom
  | Component Teams | Feature Teams |
  | Own technical layers | Own business capabilities |
  | Horizontal slicing | Vertical slicing |
  | Requires coordination | Independent delivery |
endlegend

@enduml
