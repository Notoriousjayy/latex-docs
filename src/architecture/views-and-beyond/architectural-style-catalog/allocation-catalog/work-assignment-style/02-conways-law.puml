@startuml 02-conways-law

skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false

skinparam rectangle {
    BackgroundColor<<team>> #E8F5E9
    BorderColor<<team>> #388E3C
    BackgroundColor<<module>> #E3F2FD
    BorderColor<<module>> #1976D2
}

skinparam arrow {
    Color #78909C
    FontColor #546E7A
}

title **Conway's Law**\n"Organizations design systems that mirror their communication structures"

' Top section - Organization
rectangle "**Organization Structure**" as org {
    rectangle "Team A\n(Frontend)" <<team>> as teamA
    rectangle "Team B\n(Backend)" <<team>> as teamB
    rectangle "Team C\n(Data)" <<team>> as teamC
    
    teamA <-[#388E3C,dashed]-> teamB : communicates
    teamB <-[#388E3C,dashed]-> teamC : communicates
}

' Bottom section - System Architecture
rectangle "**System Architecture**" as sys {
    rectangle "Frontend\nModule" <<module>> as modA
    rectangle "Backend\nService" <<module>> as modB
    rectangle "Data\nLayer" <<module>> as modC
    
    modA -[#1976D2]-> modB : API calls
    modB -[#1976D2]-> modC : queries
}

' Mapping arrows
teamA .[#F57C00,bold].> modA : owns
teamB .[#F57C00,bold].> modB : owns
teamC .[#F57C00,bold].> modC : owns

note right of org
  Team boundaries
  become module
  boundaries
end note

note right of sys
  Inter-team dependencies
  become inter-module
  dependencies
end note

@enduml
