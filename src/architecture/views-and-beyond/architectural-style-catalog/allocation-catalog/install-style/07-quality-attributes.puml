@startuml
skinparam backgroundColor #FFFFFF
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false

skinparam rectangle {
    RoundCorner 10
}

skinparam card {
    RoundCorner 6
}

title Quality Attributes Affected by Installation Decisions

rectangle "Install\nDecisions" as center #1565C0

rectangle "Security" as sec #FFEBEE {
    card "Permission structure\nSensitive file protection\nSeparation of concerns\nAudit capability" as secd #FCE4EC
}

rectangle "Modifiability" as mod #E8F5E9 {
    card "Config externalization\nPlugin architecture\nUpdate isolation\nVersion coexistence" as modd #C8E6C9
}

rectangle "Portability" as port #E3F2FD {
    card "Relative paths\nPlatform abstraction\nContainerization\nNo hardcoded paths" as portd #BBDEFB
}

rectangle "Performance" as perf #FFF3E0 {
    card "File locality\nFile system selection\nLoading efficiency\nStartup optimization" as perfd #FFE0B2
}

rectangle "Reliability" as rel #F3E5F5 {
    card "Integrity verification\nCorruption isolation\nRecovery support\nGraceful degradation" as reld #E1BEE7
}

rectangle "Usability" as use #E0F7FA {
    card "Discoverability\nConvention compliance\nDocs accessibility\nClean uninstall" as used #B2EBF2
}

center -[#C62828]-> sec
center -[#2E7D32]-> mod
center -[#1565C0]-> port
center -[#E65100]-> perf
center -[#7B1FA2]-> rel
center -[#00838F]-> use

center footer Key Insight: Installation architecture impacts multiple quality attributes - consider tradeoffs early
@enduml
