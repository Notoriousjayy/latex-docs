@startuml
skinparam backgroundColor #FFFFFF
skinparam defaultFontName Arial
skinparam defaultFontSize 12
skinparam shadowing false

skinparam rectangle {
    BackgroundColor #E8F4FD
    BorderColor #2E86AB
    RoundCorner 8
}

skinparam component {
    BackgroundColor #FFF3E0
    BorderColor #E65100
}

skinparam folder {
    BackgroundColor #E8F5E9
    BorderColor #2E7D32
}

title Install Style: Mapping Software to File Systems

rectangle "Software Architecture\n(C&C Components)" as arch #E3F2FD {
    component "Application\nServer" as app
    component "Database\nConnector" as db
    component "Logging\nModule" as log
    component "Plugin\nSystem" as plugin
}

rectangle "File System Structure\n(Environmental Elements)" as fs #E8F5E9 {
    folder "/opt/myapp" as root {
        folder "bin/" as bin
        folder "lib/" as lib
        folder "etc/" as etc
        folder "var/" as var
        folder "plugins/" as plugins
    }
}

app -[#2E86AB]-> bin : <<allocated-to>>\nexecutables
db -[#2E86AB]-> lib : <<allocated-to>>\nlibraries
log -[#2E86AB]-> var : <<allocated-to>>\nlog files
plugin -[#2E86AB]-> plugins : <<allocated-to>>\nextensions

note bottom of arch
  Software Elements:
  Build artifacts derived from
  architectural components
end note

note bottom of fs
  Environmental Elements:
  Directory structure on
  target system
end note

center footer Key Concept: The install style documents how software artifacts map to file system locations
@enduml
