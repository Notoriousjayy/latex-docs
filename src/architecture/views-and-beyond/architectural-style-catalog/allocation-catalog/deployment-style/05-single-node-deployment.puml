@startuml
skinparam backgroundColor #FFFFFF
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false

skinparam node {
    BackgroundColor #E3F2FD
    BorderColor #1565C0
    FontColor #0D47A1
}

skinparam artifact {
    BackgroundColor #FFF3E0
    BorderColor #EF6C00
    FontColor #E65100
}

skinparam rectangle {
    BackgroundColor #FFEBEE
    BorderColor #C62828
    FontColor #B71C1C
}

title Single-Node Deployment Pattern

node "Single Server" as server {
    artifact "Web Server" as web
    artifact "Application" as app
    artifact "Database" as db
    
    web -down-> app : local
    app -down-> db : local
}

actor "Users" as users
users -right-> web : HTTP

rectangle "Limitations" as limits {
}

note right of limits
  No fault tolerance
  Node failure = complete outage
  Limited scalability
  Resource contention
end note

note bottom of server
  Appropriate for:
  Development environments
  Small-scale applications
  Cost-constrained scenarios
end note

@enduml
