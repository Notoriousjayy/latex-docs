@startuml 06-ecommerce-example
skinparam backgroundColor #FFFFFF
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 11
skinparam padding 4
skinparam roundCorner 6

title E-Commerce System: Functional Decomposition

skinparam rectangle {
  FontSize 11
}

rectangle "**E-Commerce System**" as root #37474F;text:white {

  rectangle "**Storefront**" as sf #E8EAF6 {
    rectangle "Product\nCatalog" as sf1 #C5CAE9
    rectangle "Shopping\nCart" as sf2 #C5CAE9
    rectangle "Search" as sf3 #C5CAE9
    rectangle "Recommen-\ndations" as sf4 #C5CAE9
  }

  rectangle "**Order Management**" as om #E8EAF6 {
    rectangle "Order\nEntry" as om1 #C5CAE9
    rectangle "Order\nFulfillment" as om2 #C5CAE9
    rectangle "Order\nHistory" as om3 #C5CAE9
    rectangle "Returns\nProcessing" as om4 #C5CAE9
  }

  rectangle "**Inventory**" as inv #E8EAF6 {
    rectangle "Stock\nTracking" as inv1 #C5CAE9
    rectangle "Warehouse\nMgmt" as inv2 #C5CAE9
  }

  rectangle "**Customer\nManagement**" as cm #E8EAF6 {
    rectangle "Account\nProfiles" as cm1 #C5CAE9
    rectangle "Authenti-\ncation" as cm2 #C5CAE9
  }

  rectangle "**Payment**" as pay #E8EAF6 {
    rectangle "Transaction\nProcessing" as pay1 #C5CAE9
    rectangle "Billing" as pay2 #C5CAE9
  }

  rectangle "**Shipping**" as ship #E8EAF6 {
    rectangle "Delivery\nLogistics" as ship1 #C5CAE9
    rectangle "Tracking" as ship2 #C5CAE9
  }

}

legend right
  Decomposition criterion:
  **Business Capability**
  Each subsystem maps to a
  coherent business function.
end legend

@enduml
