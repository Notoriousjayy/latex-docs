@startuml 01-module-hierarchy
skinparam backgroundColor #FFFFFF
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 12
skinparam padding 6
skinparam roundCorner 8

skinparam rectangle {
  FontSize 12
  StereotypeFontSize 10
}

title Module Hierarchy: Root, Internal, and Leaf Modules

rectangle "**System**\n(Root Module)" as root #E8EAF6 {

  rectangle "**Subsystem A**\n(Internal Module)" as subA #C5CAE9 {
    rectangle "Module A.1\n(Leaf)" as a1 #BBDEFB
    rectangle "Module A.2\n(Leaf)" as a2 #BBDEFB
    rectangle "Module A.3\n(Leaf)" as a3 #BBDEFB
  }

  rectangle "**Subsystem B**\n(Internal Module)" as subB #C5CAE9 {

    rectangle "**Package B.1**\n(Internal Module)" as b1 #B3E5FC {
      rectangle "Module B.1.1\n(Leaf)" as b11 #BBDEFB
      rectangle "Module B.1.2\n(Leaf)" as b12 #BBDEFB
    }

    rectangle "Module B.2\n(Leaf)" as b2 #BBDEFB
  }

  rectangle "**Subsystem C**\n(Internal Module)" as subC #C5CAE9 {
    rectangle "Module C.1\n(Leaf)" as c1 #BBDEFB
    rectangle "Module C.2\n(Leaf)" as c2 #BBDEFB
  }
}

legend right
  |= Color |= Module Type |
  | <#E8EAF6> | Root Module (entire system) |
  | <#C5CAE9> | Internal Module (has children) |
  | <#BBDEFB> | Leaf Module (directly implemented) |
end legend

@enduml
