@startuml

skinparam backgroundColor #FFFFFF
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 12
skinparam shadowing false
skinparam roundCorner 8

skinparam rectangle {
  BackgroundColor<<viewtype>> #1E40AF
  FontColor<<viewtype>> #FFFFFF
  BorderColor<<viewtype>> #1E3A8A
  FontSize 16

  BackgroundColor<<style>> #3B82F6
  FontColor<<style>> #FFFFFF
  BorderColor<<style>> #2563EB
  FontSize 13

  BackgroundColor<<question>> #F3F4F6
  FontColor<<question>> #374151
  BorderColor<<question>> #D1D5DB
  FontSize 11
}

title <b>Module Styles</b>\nEach style addresses a specific structural concern

rectangle "**Module Viewtype**" as VT <<viewtype>>

rectangle "**Decomposition**\nis-part-of" as S1 <<style>>
rectangle "**Uses**\ndepends-on" as S2 <<style>>
rectangle "**Generalization**\nis-a" as S3 <<style>>
rectangle "**Layered**\nallowed-to-use" as S4 <<style>>
rectangle "**Aspects**\ncrosscuts" as S5 <<style>>
rectangle "**Data Model**\nassociations" as S6 <<style>>

rectangle "How is the system\norganized?" as Q1 <<question>>
rectangle "What depends\non what?" as Q2 <<question>>
rectangle "What specializes\nwhat?" as Q3 <<question>>
rectangle "What are the\nabstraction levels?" as Q4 <<question>>
rectangle "How are cross-cutting\nconcerns handled?" as Q5 <<question>>
rectangle "What is the\ninformation structure?" as Q6 <<question>>

VT -down-> S1
VT -down-> S2
VT -down-> S3
VT -down-> S4
VT -down-> S5
VT -down-> S6

S1 -down-> Q1
S2 -down-> Q2
S3 -down-> Q3
S4 -down-> Q4
S5 -down-> Q5
S6 -down-> Q6
@enduml
