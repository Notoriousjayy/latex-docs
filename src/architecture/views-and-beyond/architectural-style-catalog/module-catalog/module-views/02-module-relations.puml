@startuml

skinparam backgroundColor #FFFFFF
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 13
skinparam shadowing false
skinparam roundCorner 8
skinparam padding 4

skinparam package {
  BackgroundColor #EFF6FF
  BorderColor #3B82F6
  FontColor #1E40AF
  FontSize 14
}

skinparam rectangle {
  BackgroundColor #DBEAFE
  BorderColor #3B82F6
  FontColor #1E40AF
  FontSize 12
}

title <b>Module Relations</b>\nThree primary relation types in the module viewtype

package "Is-Part-Of  (Containment)" as P1 {
  rectangle "System" as SYS
  rectangle "Subsystem A" as SA
  rectangle "Subsystem B" as SB
  rectangle "Module A1" as MA1
  rectangle "Module A2" as MA2
  SYS *-down- SA
  SYS *-down- SB
  SA *-down- MA1
  SA *-down- MA2
}

package "Depends-On  (Dependency)" as P2 {
  rectangle "Module X" as MX
  rectangle "Module Y" as MY
  rectangle "Module Z" as MZ
  MX -[#E11D48,bold]right-> MY : <<uses>>
  MX -[#E11D48,bold]right-> MZ : <<uses>>
  MY -[#E11D48,bold]right-> MZ : <<calls>>
}

package "Is-A  (Generalization)" as P3 {
  rectangle "<<abstract>>\nBase Module" as BM
  rectangle "Variant A" as VA
  rectangle "Variant B" as VB
  VA -up-|> BM
  VB -up-|> BM
}

P1 -[hidden]right-> P2
P2 -[hidden]right-> P3
@enduml
