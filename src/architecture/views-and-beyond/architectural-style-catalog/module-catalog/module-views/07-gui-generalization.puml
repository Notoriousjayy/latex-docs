@startuml

skinparam backgroundColor #FFFFFF
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 13
skinparam shadowing false
skinparam roundCorner 8

skinparam class {
  BackgroundColor #DBEAFE
  BorderColor #3B82F6
  FontColor #1E40AF
  HeaderBackgroundColor #3B82F6
  HeaderFontColor #FFFFFF
  FontSize 13
}

skinparam interface {
  BackgroundColor #F3F4F6
  BorderColor #6B7280
  FontColor #374151
}

title <b>GUI Framework â€” Generalization View</b>\nWidget class hierarchy with interface realization

abstract class "Widget" as W {
  + draw()
  + resize()
  + handleEvent()
}

abstract class "Container" as C {
  + addChild()
  + removeChild()
  + layout()
}

class "Button" as B {
  + onClick()
  + setLabel()
}

class "Label" as L {
  + setText()
  + setFont()
}

class "TextField" as TF {
  + getValue()
  + setValue()
}

class "Panel" as P {
  + setTitle()
  + setBorder()
}

class "Window" as WN {
  + open()
  + close()
  + setTitle()
}

interface "EventListener" as EL {
  + onEvent()
}

interface "Observable" as OB {
  + addObserver()
  + notifyObservers()
}

W <|-- C
W <|-- B
W <|-- L
W <|-- TF
C <|-- P
C <|-- WN

EL <|.. B
EL <|.. TF
OB <|.. W
@enduml
