@startuml

skinparam backgroundColor #FFFFFF
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 13
skinparam shadowing false
skinparam roundCorner 8

skinparam rectangle {
  BackgroundColor<<good>> #DCFCE7
  FontColor<<good>> #166534
  BorderColor<<good>> #22C55E

  BackgroundColor<<bad>> #FEE2E2
  FontColor<<bad>> #991B1B
  BorderColor<<bad>> #EF4444

  BackgroundColor<<mod>> #DBEAFE
  FontColor<<mod>> #1E40AF
  BorderColor<<mod>> #3B82F6
}

title <b>Dependency Constraints</b>\nAcyclicity and direction rules preserve maintainability

rectangle "**Acyclic (Valid)**" as G <<good>> {
  rectangle "A" as A1 <<mod>>
  rectangle "B" as B1 <<mod>>
  rectangle "C" as C1 <<mod>>
  A1 -[#166534]right-> B1
  B1 -[#166534]right-> C1
}

rectangle "**Cyclic (Violation)**" as BD <<bad>> {
  rectangle "X" as X1 <<mod>>
  rectangle "Y" as Y1 <<mod>>
  rectangle "Z" as Z1 <<mod>>
  X1 -[#EF4444]right-> Y1
  Y1 -[#EF4444]right-> Z1
  Z1 -[#EF4444,bold]up-> X1 : <<cycle>>
}

rectangle "**Layered Direction (Valid)**" as G2 <<good>> {
  rectangle "High-Level" as HL <<mod>>
  rectangle "Mid-Level" as ML <<mod>>
  rectangle "Low-Level" as LL <<mod>>
  HL -[#166534]down-> ML
  ML -[#166534]down-> LL
}

G -[hidden]right-> BD
BD -[hidden]right-> G2
@enduml
