@startuml

skinparam backgroundColor #FFFFFF
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 12
skinparam shadowing false
skinparam roundCorner 8
skinparam padding 4

skinparam rectangle {
  BackgroundColor<<module>> #3B82F6
  FontColor<<module>> #FFFFFF
  BorderColor<<module>> #2563EB
  FontSize 15

  BackgroundColor<<cat>> #DBEAFE
  FontColor<<cat>> #1E40AF
  BorderColor<<cat>> #93C5FD
  FontSize 12

  BackgroundColor<<prop>> #F3F4F6
  FontColor<<prop>> #374151
  BorderColor<<prop>> #D1D5DB
  FontSize 10
}

title <b>Module Property Categories</b>\nComprehensive documentation captures six property groups

rectangle "**Module**" as M <<module>>

rectangle "**Identity**" as ID <<cat>>
rectangle "**Responsibility**" as RS <<cat>>
rectangle "**Interface**" as IF <<cat>>
rectangle "**Quality**" as QL <<cat>>
rectangle "**Implementation**" as IM <<cat>>
rectangle "**Organizational**" as OR <<cat>>

rectangle "Name\nQualified name\nVersion" as ID_P <<prop>>
rectangle "Purpose\nResponsibilities\nScope 路 Constraints" as RS_P <<prop>>
rectangle "Provided interface\nRequired interface\nContracts" as IF_P <<prop>>
rectangle "Cohesion\nCoupling\nStability 路 Abstractness" as QL_P <<prop>>
rectangle "Technology\nSize 路 Complexity\nLocation" as IM_P <<prop>>
rectangle "Owner 路 Team\nStatus" as OR_P <<prop>>

M -down-> ID
M -down-> RS
M -down-> IF
M -down-> QL
M -down-> IM
M -down-> OR

ID -down-> ID_P
RS -down-> RS_P
IF -down-> IF_P
QL -down-> QL_P
IM -down-> IM_P
OR -down-> OR_P
@enduml
