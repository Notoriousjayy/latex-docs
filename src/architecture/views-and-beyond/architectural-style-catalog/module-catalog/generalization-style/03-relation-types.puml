@startuml
skinparam backgroundColor #FFFFFF
skinparam defaultFontSize 12
skinparam shadowing false
skinparam dpi 150
skinparam nodesep 60
skinparam ranksep 50

skinparam class {
  BorderColor #2C3E50
  ArrowColor #2C3E50
  FontColor #2C3E50
  FontSize 13
  AttributeFontSize 11
}

skinparam package {
  BorderColor #888888
  FontSize 13
}

title **Types of Generalization Relations**\nFour mechanisms for expressing the //is-a// relationship

package "Class Inheritance (extends)" #E8F4FD {
  abstract class "Vehicle" as veh #D5E8D4 {
    + start()
    + stop()
  }
  class "Car" as car #E8F4FD {
    + openTrunk()
  }
  veh <|-- car : extends
}

package "Interface Inheritance (extends)" #E8F4FD {
  interface "Collection" as coll #F3E5F5 {
    + add()
    + remove()
  }
  interface "List" as list #F3E5F5 {
    + get(index)
  }
  coll <|-- list : extends
}

package "Interface Realization (implements)" #E8F4FD {
  interface "Drawable" as draw #F3E5F5 {
    + draw()
  }
  class "Circle" as circ #E8F4FD {
    + draw()
    + radius()
  }
  draw <|.. circ : implements
}

package "Mixin Inclusion (with)" #E8F4FD {
  class "<<mixin>> Timestamped" as ts #FFF3E0 {
    + createdAt()
    + updatedAt()
  }
  class "Order" as ord #E8F4FD {
    + total()
  }
  ts <|.. ord : includes
}

legend bottom
  **Solid line + hollow triangle** = class / interface inheritance (extends)
  **Dashed line + hollow triangle** = realization / mixin inclusion (implements / with)
end legend

@enduml
