@startuml
skinparam backgroundColor #FFFFFF
skinparam defaultFontSize 12
skinparam shadowing false
skinparam dpi 150
skinparam nodesep 25
skinparam ranksep 35

skinparam class {
  BorderColor #2C3E50
  ArrowColor #2C3E50
  FontColor #2C3E50
  FontSize 13
  AttributeFontSize 11
}

skinparam legend {
  BackgroundColor #F8F8F8
  BorderColor #CCCCCC
}

title **Collections Framework Hierarchy**\nA classic example of layered generalization

interface "Iterable" as iter #F3E5F5 {
  + iterator()
}

interface "Collection" as coll #F3E5F5 {
  + add(e)
  + remove(e)
  + size()
}

interface "List" as list #E8DAEF {
  + get(index)
  + set(index, e)
}

interface "Set" as set #E8DAEF {
  .. no duplicates ..
}

interface "Queue" as queue #E8DAEF {
  + offer(e)
  + poll()
  + peek()
}

abstract class "AbstractCollection" as abscoll #D5E8D4 {
  + isEmpty()
  + toArray()
}

abstract class "AbstractList" as abslist #D5E8D4 {
  + indexOf(e)
  + subList()
}

class "ArrayList" as alist #E8F4FD {
  - elementData[]
  + get(index)
}

class "LinkedList" as llist #E8F4FD {
  - first : Node
  + addFirst(e)
}

class "HashSet" as hset #E8F4FD {
  - map : HashMap
  + add(e)
}

class "PriorityQueue" as pq #E8F4FD {
  - queue[]
  + poll()
}

iter <|-- coll
coll <|-- list
coll <|-- set
coll <|-- queue
coll <|.. abscoll
abscoll <|-- abslist
list <|.. abslist
abslist <|-- alist
list <|.. llist
queue <|.. llist
set <|.. hset
queue <|.. pq

legend bottom
  **Purple** = Interfaces (contracts at each level)
  **Green** = Abstract classes (partial reusable implementations)
  **Blue** = Concrete classes (complete, instantiable implementations)
end legend

@enduml
