@startuml

skinparam backgroundColor white
skinparam defaultFontSize 12
skinparam ArrowColor #2C3E50
skinparam ArrowThickness 2
skinparam RectangleBorderColor #2C3E50
skinparam RectangleFontSize 13
skinparam PackageBorderColor #ABB2B9
skinparam PackageBackgroundColor #FDFEFE
skinparam PackageFontSize 12

title Module Types by Dependency Profile

package "Top-Level Modules" as TL #FFF3E0 {
  rectangle "UI Controller" as UI #FFE0B2
  rectangle "CLI App" as CLI #FFE0B2
}

package "Intermediate Modules" as IM #E8F5E9 {
  rectangle "Business Logic" as BL #C8E6C9
  rectangle "Data Access" as DA #C8E6C9
}

package "Foundation Modules" as FM #E3F2FD {
  rectangle "Utility Library" as UL #BBDEFB
  rectangle "Core Abstractions" as CA #BBDEFB
}

rectangle "Isolated Module" as ISO #F3E5F5

UI -down--> BL : <<uses>>
CLI -down--> BL : <<uses>>
BL -down--> DA : <<uses>>
BL -down--> CA : <<uses>>
DA -down--> UL : <<uses>>
DA -down--> CA : <<uses>>

note right of TL
  **High fan-out, zero fan-in**
  Entry points; nothing
  depends on them
end note

note right of FM
  **High fan-in, low fan-out**
  Stable foundation;
  many modules depend on them
end note

note right of ISO
  **Zero fan-in, zero fan-out**
  Independent; may indicate
  design issue or standalone utility
end note
@enduml
