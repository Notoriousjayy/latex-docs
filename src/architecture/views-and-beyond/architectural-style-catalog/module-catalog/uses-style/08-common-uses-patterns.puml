@startuml

skinparam backgroundColor white
skinparam defaultFontSize 11
skinparam ArrowColor #2C3E50
skinparam ArrowThickness 2
skinparam RectangleBorderColor #2C3E50
skinparam RectangleFontSize 12
skinparam PackageBorderColor #566573
skinparam PackageBackgroundColor #FAFAFA

title Four Common Uses Patterns

package "Layered Pattern" as LP {
  rectangle "Presentation" as L1 #FFE0B2
  rectangle "Business" as L2 #C8E6C9
  rectangle "Data Access" as L3 #BBDEFB
  L1 -down-> L2
  L2 -down-> L3
}

package "Core-Periphery Pattern" as CP {
  rectangle "Plugin A" as PA #FFE0B2
  rectangle "Plugin B" as PB #FFE0B2
  rectangle "Plugin C" as PC #FFE0B2
  rectangle " Core " as CORE #BBDEFB
  PA -down-> CORE
  PB -down-> CORE
  PC -down-> CORE
}

package "Pipeline Pattern" as PP {
  rectangle "Stage 1" as S1 #BBDEFB
  rectangle "Stage 2" as S2 #C8E6C9
  rectangle "Stage 3" as S3 #FFE0B2
  S3 -left-> S2
  S2 -left-> S1
}

package "Hub Pattern" as HP {
  rectangle "Mod X" as MX #C8E6C9
  rectangle "Mod Y" as MY #C8E6C9
  rectangle "Mod Z" as MZ #C8E6C9
  rectangle " Hub " as HUB #F8BBD0
  HUB -down-> MX
  HUB -down-> MY
  HUB -down-> MZ
}

note bottom of LP
  Acyclic; flows
  strictly downward
end note

note bottom of CP
  High fan-in core;
  periphery is independent
end note

note bottom of PP
  Linear chain;
  fan-in and fan-out of 1
end note

note bottom of HP
  Centralizes coordination;
  hub has high fan-out
end note
@enduml
