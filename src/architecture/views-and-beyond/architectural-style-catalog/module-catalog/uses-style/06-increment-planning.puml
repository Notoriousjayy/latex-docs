@startuml

skinparam backgroundColor white
skinparam defaultFontSize 12
skinparam ArrowColor #2C3E50
skinparam ArrowThickness 2
skinparam RectangleBorderColor #2C3E50
skinparam RectangleFontSize 13
skinparam PackageBorderColor #566573
skinparam PackageBackgroundColor #FAFAFA

title Increment Planning: Development Sequencing via Uses Order

package "Increment 1 — Foundation" as I1 #E3F2FD {
  rectangle "Config" as A #BBDEFB
  rectangle "Logger" as B #BBDEFB
}

package "Increment 2 — Core Services" as I2 #E8F5E9 {
  rectangle "User Store" as C #C8E6C9
  rectangle "Crypto Lib" as D #C8E6C9
}

package "Increment 3 — Business Logic" as I3 #FFF3E0 {
  rectangle "Auth Service" as E #FFE0B2
  rectangle "Report Engine" as F #FFE0B2
}

package "Increment 4 — User Interfaces" as I4 #FCE4EC {
  rectangle "Auth UI" as G #F8BBD0
  rectangle "Reporting" as H #F8BBD0
}

C -down-> A : <<uses>>
C -down-> B : <<uses>>
D -down-> A : <<uses>>
E -down-> C : <<uses>>
E -down-> D : <<uses>>
E -down-> B : <<uses>>
F -down-> C : <<uses>>
F -down-> B : <<uses>>
G -down-> E : <<uses>>
G -down-> B : <<uses>>
H -down-> F : <<uses>>

note as N1
  Each increment builds
  on prior increments.
  Dependencies always
  point downward to
  already-completed work.
end note
@enduml
