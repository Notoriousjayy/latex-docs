@startuml
skinparam backgroundColor white
skinparam defaultFontSize 12
skinparam ArrowColor #2C3E50
skinparam ArrowThickness 2
skinparam RectangleBorderColor #2C3E50
skinparam RectangleFontSize 13
skinparam PackageBorderColor #566573
skinparam PackageBackgroundColor #FAFAFA

title Uses vs. Other Dependency Types

package "Compile-Time Only — NOT uses" as CT #FFF9C4 {
  rectangle "module_a.c" as A1 #FFFDE7
  rectangle "types.h" as T1 #FFFDE7
  A1 -right-> T1 : <<includes>>\nneeds type defs,\nnot behavior
}

package "Functional Dependency — IS uses" as FD #E8F5E9 {
  rectangle "OrderService" as A2 #C8E6C9
  rectangle "PaymentGateway" as T2 #C8E6C9
  A2 -right-> T2 : <<uses>>\nrequires correct\npayment processing
}

package "Creation Only — NOT uses" as CW #E3F2FD {
  rectangle "Factory" as A3 #BBDEFB
  rectangle "WidgetType" as T3 #BBDEFB
  A3 -right-> T3 : <<creates>>\ninstantiates type,\nnot behavior
}

package "Inheritance — depends on context" as IH #F3E5F5 {
  rectangle "ChildClass" as A4 #E1BEE7
  rectangle "ParentClass" as T4 #E1BEE7
  A4 -right-> T4 : <<extends>>\nuses only if correctness\ndepends on parent
}

CT -[hidden]down- FD
FD -[hidden]down- CW
CW -[hidden]down- IH

note as N1
  **Key Test:** Could A satisfy
  its requirements if B were
  absent or incorrect?
  If not, A **uses** B.
end note
@enduml
