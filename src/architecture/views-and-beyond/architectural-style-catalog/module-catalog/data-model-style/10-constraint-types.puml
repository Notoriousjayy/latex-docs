@startuml 10-constraint-types
!define BLUE #4A90D9
!define GREEN #5BA85B
!define ORANGE #D4763C
!define PURPLE #7B68AE
!define TEAL #2C8C99

skinparam backgroundColor white
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 11
skinparam shadowing false
skinparam roundCorner 8

skinparam rectangle {
  FontSize 12
}

title <size:18><b>Data Integrity Constraint Types</b></size>\n<size:12>Rules that maintain data correctness and quality</size>

rectangle "**Entity Integrity**" as EI #E8F0FE {
  rectangle "Primary keys never null" as e1 #D6EAF8
  rectangle "Primary keys always unique" as e2 #D6EAF8
  rectangle "Every instance identifiable" as e3 #D6EAF8
}

rectangle "**Referential Integrity**" as RI #E8F5E8 {
  rectangle "FK matches existing PK" as r1 #D5F5E3
  rectangle "No orphaned records" as r2 #D5F5E3
  rectangle "Cascade / Restrict rules" as r3 #D5F5E3
}

rectangle "**Domain Integrity**" as DI #FDE8D8 {
  rectangle "Correct data types" as d1 #FDEBD0
  rectangle "Value range constraints" as d2 #FDEBD0
  rectangle "NOT NULL where required" as d3 #FDEBD0
}

rectangle "**Business Rule Integrity**" as BI #EDE8F5 {
  rectangle "Value constraints\n(salary > 0)" as b1 #E8DAEF
  rectangle "State constraints\n(ship after pay)" as b2 #E8DAEF
  rectangle "Cross-entity rules\n(order ≤ credit limit)" as b3 #E8DAEF
}

rectangle "**Temporal Integrity**" as TI #E0F7F7 {
  rectangle "Valid time periods" as t1 #D1F2EB
  rectangle "No overlapping intervals" as t2 #D1F2EB
  rectangle "Bi-temporal consistency" as t3 #D1F2EB
}

EI -[hidden]right- RI
RI -[hidden]right- DI
DI -[hidden]down- BI
BI -[hidden]left- TI

note as N1
  **Enforcement levels:**
  Database → triggers, checks, FKs
  Application → validation logic
  Documentation → non-enforceable rules
end note

@enduml
