@startuml 03-cardinality-relationships
!define ACCENT #4A90D9
!define LIGHT #E8F0FE
!define DARK #2C5F8A
!define BORDER #3A3A3A

skinparam backgroundColor white
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 11
skinparam shadowing false
skinparam roundCorner 4

skinparam class {
  BackgroundColor LIGHT
  BorderColor ACCENT
  FontSize 12
  AttributeFontSize 10
  HeaderBackgroundColor ACCENT
  HeaderFontColor white
}

title <size:18><b>Cardinality Relationships</b></size>\n<size:12>How entity instances relate to one another</size>

together {
  class "Person" as person {
    person_id : UUID <<PK>>
    name : String
    birth_date : Date
  }

  class "Passport" as passport {
    passport_id : UUID <<PK>>
    person_id : UUID <<FK>>
    number : String
    expiry_date : Date
  }
}

person "1" -- "0..1" passport : "  One-to-One  "

together {
  class "Customer" as customer {
    customer_id : UUID <<PK>>
    name : String
    email : String
  }

  class "Order" as order {
    order_id : UUID <<PK>>
    customer_id : UUID <<FK>>
    order_date : Date
    status : Enum
  }
}

customer "1" -- "0..*" order : "  One-to-Many  "

together {
  class "Student" as student {
    student_id : UUID <<PK>>
    name : String
    major : String
  }

  class "Enrollment" as enroll {
    student_id : UUID <<FK>>
    course_id : UUID <<FK>>
    enrolled_date : Date
    grade : String
  }

  class "Course" as course {
    course_id : UUID <<PK>>
    title : String
    credits : Integer
  }
}

student "1..*" -- "0..*" enroll
enroll "0..*" -- "1..*" course

note "Many-to-Many\n(via association table)" as N1
enroll .. N1

@enduml
