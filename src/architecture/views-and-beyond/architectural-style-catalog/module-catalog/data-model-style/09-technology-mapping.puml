@startuml 09-technology-mapping
!define BLUE #4A90D9
!define GREEN #5BA85B
!define ORANGE #D4763C
!define PURPLE #7B68AE
!define TEAL #2C8C99
!define RED #C0564B

skinparam backgroundColor white
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 11
skinparam shadowing false
skinparam roundCorner 6

skinparam rectangle {
  FontSize 12
}

skinparam arrow {
  Thickness 2
  FontSize 10
  Color #555555
}

title <size:18><b>Data Model Technology Mapping</b></size>\n<size:12>How logical model concepts map to different database technologies</size>

rectangle "**Logical Data Model**" as LDM #F5F5F5 {
  rectangle "Entities" as ent #FFFFFF
  rectangle "Attributes" as attr #FFFFFF
  rectangle "Relationships" as rel #FFFFFF
  rectangle "Constraints" as con #FFFFFF
}

rectangle "**Relational DB**\n(PostgreSQL, MySQL)" as RDB #E8F0FE {
  rectangle "Tables" as t1 #D6EAF8
  rectangle "Columns" as t2 #D6EAF8
  rectangle "Foreign Keys" as t3 #D6EAF8
  rectangle "CHECK, UNIQUE" as t4 #D6EAF8
}

rectangle "**Document DB**\n(MongoDB, Couchbase)" as DDB #E8F5E8 {
  rectangle "Documents" as d1 #D5F5E3
  rectangle "Fields" as d2 #D5F5E3
  rectangle "Embedded / $ref" as d3 #D5F5E3
  rectangle "Schema validation" as d4 #D5F5E3
}

rectangle "**Graph DB**\n(Neo4j, Neptune)" as GDB #EDE8F5 {
  rectangle "Nodes" as g1 #E8DAEF
  rectangle "Properties" as g2 #E8DAEF
  rectangle "Edges" as g3 #E8DAEF
  rectangle "Property checks" as g4 #E8DAEF
}

rectangle "**Key-Value Store**\n(Redis, DynamoDB)" as KVS #FDE8D8 {
  rectangle "Values (objects)" as k1 #FAD7A0
  rectangle "Fields in value" as k2 #FAD7A0
  rectangle "Key design" as k3 #FAD7A0
  rectangle "App-level" as k4 #FAD7A0
}

ent -[#4A90D9]-> t1
ent -[#5BA85B]-> d1
ent -[#7B68AE]-> g1
ent -[#D4763C]-> k1

attr -[#4A90D9]-> t2
attr -[#5BA85B]-> d2
attr -[#7B68AE]-> g2
attr -[#D4763C]-> k2

rel -[#4A90D9]-> t3
rel -[#5BA85B]-> d3
rel -[#7B68AE]-> g3
rel -[#D4763C]-> k3

con -[#4A90D9]-> t4
con -[#5BA85B]-> d4
con -[#7B68AE]-> g4
con -[#D4763C]-> k4

@enduml
