@startuml 02-entity-types
!define CORE #4A90D9
!define REF #7B68AE
!define TRANS #5BA85B
!define ASSOC #D4763C
!define AGG #C0564B
!define TEMP #2C8C99
!define LIGHT_BG #FAFAFA
!define BORDER #3A3A3A

skinparam backgroundColor white
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 11
skinparam shadowing false
skinparam roundCorner 6
skinparam packageStyle rectangle

skinparam class {
  BackgroundColor white
  BorderColor BORDER
  FontSize 12
  AttributeFontSize 10
  StereotypeFontSize 9
  HeaderBackgroundColor white
}

title <size:18><b>Data Entity Type Classification</b></size>\n<size:12>Entities categorized by role and characteristics</size>

package "Core Entities" as pkg_core CORE {
  class "Customer" as cust <<Core>> {
    customer_id : UUID <<PK>>
    name : String
    email : String
    status : Enum
  }
  class "Product" as prod <<Core>> {
    product_id : UUID <<PK>>
    sku : String
    name : String
    price : Decimal
  }
}

package "Reference Entities" as pkg_ref REF {
  class "Country" as country <<Reference>> {
    country_code : String <<PK>>
    name : String
  }
  class "Currency" as currency <<Reference>> {
    currency_code : String <<PK>>
    symbol : String
  }
}

package "Transaction Entities" as pkg_trans TRANS {
  class "Sale" as sale <<Transaction>> {
    sale_id : UUID <<PK>>
    timestamp : DateTime
    total : Decimal
  }
  class "Payment" as pay <<Transaction>> {
    payment_id : UUID <<PK>>
    timestamp : DateTime
    amount : Decimal
  }
}

package "Association Entities" as pkg_assoc ASSOC {
  class "OrderLine" as ol <<Association>> {
    order_id : UUID <<FK>>
    product_id : UUID <<FK>>
    quantity : Integer
    unit_price : Decimal
  }
}

package "Temporal Entities" as pkg_temp TEMP {
  class "PriceHistory" as ph <<Temporal>> {
    product_id : UUID <<FK>>
    effective_date : Date
    price : Decimal
    end_date : Date
  }
}

note as N1
  **Core**: Fundamental business concepts
  **Reference**: Lookup / classification values
  **Transaction**: Business events with timestamps
  **Association**: Many-to-many link tables
  **Temporal**: Track changes over time
end note

@enduml
