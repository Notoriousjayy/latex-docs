@startuml 01-abstraction-levels
!define ACCENT #4A90D9
!define LIGHT #E8F0FE
!define MID #A8C8E8
!define DARK #2C5F8A
!define GRAY #F5F5F5
!define BORDER #3A3A3A

skinparam backgroundColor white
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 12
skinparam shadowing false
skinparam roundCorner 8

skinparam rectangle {
  FontSize 13
  StereotypeFontSize 10
}

skinparam arrow {
  Color DARK
  FontSize 11
  Thickness 2
}

skinparam note {
  BackgroundColor GRAY
  BorderColor #CCCCCC
  FontSize 10
}

title <size:18><b>Data Model Abstraction Levels</b></size>\n<size:12>From business concepts to physical implementation</size>

rectangle "**Conceptual Model**" as CM ACCENT {
  rectangle "Business terminology" as C1 LIGHT
  rectangle "Entity identification" as C2 LIGHT
  rectangle "High-level relationships" as C3 LIGHT
  rectangle "Technology-independent" as C4 LIGHT
}

rectangle "**Logical Model**" as LM #5BA85B {
  rectangle "Attributes & data types" as L1 #E8F5E8
  rectangle "Keys & constraints" as L2 #E8F5E8
  rectangle "Precise cardinalities" as L3 #E8F5E8
  rectangle "Normalization applied" as L4 #E8F5E8
}

rectangle "**Physical Model**" as PM #D4763C {
  rectangle "Table & column definitions" as P1 #FDE8D8
  rectangle "Indexes & partitions" as P2 #FDE8D8
  rectangle "Storage parameters" as P3 #FDE8D8
  rectangle "Technology-specific DDL" as P4 #FDE8D8
}

CM -[DARK]-> LM : "  Add detail &\n  precision  "
LM -[DARK]-> PM : "  Optimize for\n  target technology  "

note right of CM
  **Audience:** Business stakeholders
  **Purpose:** Communication & validation
end note

note right of LM
  **Audience:** Architects & analysts
  **Purpose:** Architecture specification
end note

note right of PM
  **Audience:** Database developers
  **Purpose:** Implementation blueprint
end note

@enduml
