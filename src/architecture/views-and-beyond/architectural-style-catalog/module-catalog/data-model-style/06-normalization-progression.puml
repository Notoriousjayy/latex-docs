@startuml 06-normalization-progression
!define RED #C0564B
!define ORANGE #D4763C
!define YELLOW #C9A825
!define GREEN #5BA85B
!define BLUE #4A90D9

skinparam backgroundColor white
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 11
skinparam shadowing false
skinparam roundCorner 6

skinparam rectangle {
  FontSize 12
}

skinparam arrow {
  Thickness 2
  FontSize 10
}

title <size:18><b>Normalization Progression</b></size>\n<size:12>Reducing redundancy through successive normal forms</size>

rectangle "**Unnormalized**" as UNF #FADBD8 {
  rectangle "Repeating groups\nMulti-valued columns\nDuplicated rows" as u1 #F5B7B1
}

rectangle "**1NF – First Normal Form**" as NF1 #FDE8D8 {
  rectangle "Atomic values only\nNo repeating groups\nUnique rows via PK" as n1 #FDEBD0
}

rectangle "**2NF – Second Normal Form**" as NF2 #FEF5E7 {
  rectangle "Meets 1NF\nNo partial dependencies\nAll non-key attrs depend\non full composite PK" as n2 #FEF9E7
}

rectangle "**3NF – Third Normal Form**" as NF3 #E8F5E8 {
  rectangle "Meets 2NF\nNo transitive dependencies\nNon-key attrs depend\nonly on the key" as n3 #EAFAF1
}

rectangle "**BCNF – Boyce-Codd NF**" as BCNF #E8F0FE {
  rectangle "Meets 3NF\nEvery determinant is\na candidate key" as bc1 #D6EAF8
}

UNF -[#C0564B,bold]-> NF1 : " Eliminate\n repeating groups "
NF1 -[#D4763C,bold]-> NF2 : " Remove partial\n dependencies "
NF2 -[#C9A825,bold]-> NF3 : " Remove transitive\n dependencies "
NF3 -[#5BA85B,bold]-> BCNF : " Strengthen\n determinant rule "

note right of UNF
  **Problem:** Update anomalies,
  insertion & deletion anomalies
end note

note right of BCNF
  **Goal for most systems.**
  Higher NFs (4NF, 5NF) address
  multi-valued & join dependencies.
end note

@enduml
