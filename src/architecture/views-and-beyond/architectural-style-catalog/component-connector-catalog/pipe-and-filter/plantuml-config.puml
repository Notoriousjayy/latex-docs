' =============================================================================
' PlantUML Global Configuration
' =============================================================================
' Consistent styling aligned with the Effective Diagrams Checklist:
'   - Limited palette (2-3 colors + grayscale)
'   - Colorblind-friendly combinations
'   - High contrast for readability
'   - Clean, professional appearance
' =============================================================================

' --- General Settings ---
skinparam backgroundColor white
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false
skinparam roundCorner 8

' --- Color Palette ---
' Primary roles use distinct, accessible colors
!$SOURCE_COLOR = "#4A90D9"
!$TRANSFORMER_COLOR = "#7CB342"
!$SINK_COLOR = "#F5A623"
!$SPLITTER_COLOR = "#00ACC1"
!$AGGREGATOR_COLOR = "#AB47BC"
!$ERROR_COLOR = "#EF5350"
!$TEE_COLOR = "#FF7043"
!$NEUTRAL_COLOR = "#455A64"

' --- Component Styling ---
skinparam component {
    BackgroundColor #7CB342
    FontColor white
    BorderColor #558B2F
    BorderThickness 1
}

skinparam component<<source>> {
    BackgroundColor #4A90D9
    BorderColor #1565C0
}

skinparam component<<sink>> {
    BackgroundColor #F5A623
    BorderColor #E65100
}

skinparam component<<transformer>> {
    BackgroundColor #7CB342
    BorderColor #558B2F
}

skinparam component<<splitter>> {
    BackgroundColor #00ACC1
    BorderColor #00838F
}

skinparam component<<aggregator>> {
    BackgroundColor #AB47BC
    BorderColor #7B1FA2
}

skinparam component<<error>> {
    BackgroundColor #EF5350
    BorderColor #C62828
}

skinparam component<<tee>> {
    BackgroundColor #FF7043
    BorderColor #D84315
}

' --- Arrow Styling ---
skinparam arrow {
    Color #37474F
    FontColor #37474F
    Thickness 2
}

' --- Rectangle/Package Styling ---
skinparam rectangle {
    BackgroundColor #FAFAFA
    BorderColor #90A4AE
    BorderThickness 1
}

skinparam package {
    BackgroundColor #F5F5F5
    BorderColor #666666
}

' --- Note Styling ---
skinparam note {
    BackgroundColor #FFFDE7
    BorderColor #FBC02D
    FontSize 10
}

' --- Legend Styling ---
skinparam legend {
    BackgroundColor #FAFAFA
    BorderColor #BDBDBD
    FontSize 10
}

' --- Queue Styling (for buffers) ---
skinparam queue {
    BackgroundColor #FFF9C4
    BorderColor #F9A825
}
