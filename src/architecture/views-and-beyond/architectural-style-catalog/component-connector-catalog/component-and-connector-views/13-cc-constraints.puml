@startuml 13-cc-constraints
!theme plain
skinparam backgroundColor #FEFEFE
skinparam defaultFontName Arial
skinparam defaultFontSize 10

skinparam component {
    BorderThickness 2
}

skinparam rectangle {
    BorderThickness 2
}

title Constraints in C&C Views

rectangle "**Structural Constraints**" as struct #E3F2FD {
    component "A" as a1
    component "B" as b1
    rectangle "connector" as c1 #FFF8E1
    
    a1 --> c1 : ✓
    c1 --> b1 : ✓
    
    note as n1
      Components attach only
      to connectors, not to
      other components directly
    end note
}

rectangle "**Compatibility Constraints**" as compat #C8E6C9 {
    component "Producer\n//format: JSON//" as prod
    rectangle "connector" as c2 #FFF8E1
    component "Consumer\n//format: JSON//" as cons
    
    prod --> c2 : ✓ compatible
    c2 --> cons
    
    note as n2
      Connected elements must
      have compatible types,
      protocols, and formats
    end note
}

rectangle "**Multiplicity Constraints**" as mult #FFCCBC {
    component "Server" as srv {
        portin "API (1..*)" as api
    }
    component "Client 1" as cl1
    component "Client 2" as cl2
    
    cl1 --> api
    cl2 --> api
    
    note as n3
      Ports and roles specify
      how many connections
      are permitted
    end note
}

rectangle "**Configuration Constraints**" as config #FFF9C4 {
    component "Core" as core
    component "Required" as req
    component "Optional" as opt
    
    core --> req : must exist
    core ..> opt : may exist
    
    note as n4
      Required attachments
      Prohibited attachments
      Conditional dependencies
    end note
}

struct -[hidden]r-> compat
mult -[hidden]r-> config

@enduml
