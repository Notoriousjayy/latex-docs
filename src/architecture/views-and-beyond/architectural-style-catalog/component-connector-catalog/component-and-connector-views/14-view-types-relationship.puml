@startuml 14-view-types-relationship
!theme plain
skinparam backgroundColor #FEFEFE
skinparam defaultFontName Arial
skinparam defaultFontSize 11

skinparam rectangle {
    BorderThickness 2
}

skinparam card {
    BorderThickness 2
}

title Relationship Between Architectural View Types

rectangle "**Module Views**\n(Code-Time Structure)" as mod #E3F2FD {
    card "Packages" as pkg
    card "Classes" as cls
    card "Modules" as mods
    card "Dependencies" as deps
    
    pkg -[hidden]r-> cls
    mods -[hidden]r-> deps
}

note right of mod
  //Shows how code//
  //is organized//
end note

rectangle "**C&C Views**\n(Runtime Structure)" as cc #C8E6C9 {
    card "Processes" as proc
    card "Services" as svc
    card "Connectors" as conn
    card "Data Flow" as flow
    
    proc -[hidden]r-> svc
    conn -[hidden]r-> flow
}

note right of cc
  //Shows what exists//
  //at runtime//
end note

rectangle "**Allocation Views**\n(Mapping to Environment)" as alloc #FFCCBC {
    card "Deployment" as dep
    card "Work Assignment" as work
    card "Installation" as inst
    
    dep -[hidden]r-> work
}

note right of alloc
  //Shows how software//
  //maps to environment//
end note

mod --> cc : "modules become\ncomponents"
cc --> alloc : "components\ndeploy to nodes"

legend bottom
  |= View Type |= Focus |= Key Question |
  | Module Views | Code structure | How is the code organized? |
  | C&C Views | Runtime structure | What runs and how does it interact? |
  | Allocation Views | Environment mapping | Where does it run and who builds it? |
endlegend

@enduml
