@startuml
skinparam backgroundColor #FEFEFE
skinparam defaultFontSize 11
skinparam defaultFontName Arial
skinparam shadowing false

skinparam rectangle {
    BorderColor #455A64
    FontColor #263238
}

skinparam database {
    FontColor #263238
}

title Repository Component Types\nClassification by data model and structure

rectangle "Structured Data" as structured #E3F2FD {
    database "Relational DB\n(PostgreSQL, MySQL)" as relational #BBDEFB
    database "Wide-Column\n(Cassandra, HBase)" as widecolumn #BBDEFB
    database "Time-Series\n(InfluxDB, TimescaleDB)" as timeseries #BBDEFB
}

rectangle "Semi-Structured Data" as semistructured #E8F5E9 {
    database "Document DB\n(MongoDB, CouchDB)" as document #C8E6C9
    database "Key-Value\n(Redis, DynamoDB)" as keyvalue #C8E6C9
    database "Graph DB\n(Neo4j, Neptune)" as graph #C8E6C9
}

rectangle "Unstructured Data" as unstructured #FFF3E0 {
    database "Object Store\n(S3, Azure Blob)" as object #FFE0B2
    database "File System\n(HDFS, NFS)" as filesystem #FFE0B2
    database "Data Lake\n(Delta Lake, Iceberg)" as datalake #FFE0B2
}

rectangle "Caching Layer" as caching #FCE4EC {
    database "In-Memory Grid\n(Hazelcast, Ignite)" as inmemory #F8BBD9
}

note right of structured
  ACID transactions
  Strong consistency
  Schema enforcement
end note

note right of semistructured
  Flexible schema
  Horizontal scaling
  Eventual consistency
end note

note right of unstructured
  Any format
  Massive scale
  Schema-on-read
end note

note right of caching
  Low latency
  Distributed state
end note

legend bottom
  Select repository type based on data model,
  consistency requirements, and query patterns
endlegend

@enduml
