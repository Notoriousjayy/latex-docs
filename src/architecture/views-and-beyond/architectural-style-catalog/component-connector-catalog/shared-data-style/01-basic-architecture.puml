@startuml
skinparam backgroundColor #FEFEFE
skinparam defaultFontSize 12
skinparam defaultFontName Arial
skinparam shadowing false

skinparam component {
    BackgroundColor #E3F2FD
    BorderColor #1565C0
    FontColor #0D47A1
}

skinparam database {
    BackgroundColor #FFF3E0
    BorderColor #E65100
    FontColor #BF360C
}

skinparam rectangle {
    BackgroundColor #E8F5E9
    BorderColor #2E7D32
    FontColor #1B5E20
}

title Shared-Data Architectural Style\nData-centric communication through shared repository

database "Shared Data\nRepository" as repo #FFF3E0

rectangle "Data Producers" as producers #E8F5E9 {
    [Producer A\n(Data Entry)] as prodA
    [Producer B\n(ETL Process)] as prodB
    [Producer C\n(Event Collector)] as prodC
}

rectangle "Data Consumers" as consumers #E3F2FD {
    [Consumer X\n(Reporting)] as consX
    [Consumer Y\n(Analytics)] as consY
    [Consumer Z\n(API Service)] as consZ
}

prodA --> repo : writes
prodB --> repo : writes
prodC --> repo : writes

repo --> consX : reads
repo --> consY : reads
repo --> consZ : reads

note bottom of repo
  Key Characteristic:
  Producers and consumers
  communicate indirectly
  through the shared repository
end note

legend right
  | Color | Meaning |
  |<#E8F5E9>| Data Producer |
  |<#E3F2FD>| Data Consumer |
  |<#FFF3E0>| Repository |
endlegend

@enduml
