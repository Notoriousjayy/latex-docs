@startuml
skinparam backgroundColor #FEFEFE
skinparam defaultFontName Helvetica
skinparam defaultFontSize 11
skinparam componentStyle rectangle

skinparam component {
    BackgroundColor #EEEEEE
    FontColor #333333
    BorderColor #CCCCCC
}

skinparam package {
    BackgroundColor #FFFFFF
    BorderColor #888888
}

title Publisher and Subscriber Component Types\nClassification by data production and consumption patterns

package "PUBLISHER TYPES" {
    component "Event Source\n-----------\nGenerates events\n(sensors, UI controls)" as P1 #4A90D9
    component "State-Change Publisher\n-----------\nAnnounces state\nmodifications" as P2 #4A90D9
    component "Command Result Publisher\n-----------\nReports operation\noutcomes" as P3 #4A90D9
    component "Aggregating Publisher\n-----------\nConsolidates\nmultiple sources" as P4 #4A90D9
    component "Bridge Publisher\n-----------\nRepublishes from\nexternal systems" as P5 #4A90D9
}

package "SUBSCRIBER TYPES" {
    component "Event Handler\n-----------\nPerforms actions\nin response" as S1 #5BAE5B
    component "Event Processor\n-----------\nTransforms events,\nmay republish" as S2 #5BAE5B
    component "Event Logger\n-----------\nPersists for\naudit/replay" as S3 #5BAE5B
    component "Event Aggregator\n-----------\nComputes summaries,\ndetects patterns" as S4 #5BAE5B
    component "UI Component\n-----------\nUpdates displays\nin real-time" as S5 #5BAE5B
}

@enduml
