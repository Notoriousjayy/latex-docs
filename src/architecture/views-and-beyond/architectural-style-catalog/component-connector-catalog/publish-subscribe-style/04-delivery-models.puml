@startuml
skinparam backgroundColor #FEFEFE
skinparam defaultFontName Helvetica
skinparam defaultFontSize 11
skinparam componentStyle rectangle

skinparam package {
    BackgroundColor #FFFFFF
    BorderColor #888888
    FontColor #333333
}

title Event Delivery Models\nPush-based vs. pull-based event distribution

package "Push Delivery" {
    component "Publisher" as PP #4A90D9
    component "Event\nBroker" as PB #F5A623
    component "Subscriber" as PS #5BAE5B
    
    PP -right-> PB : publish
    PB -right-> PS : PUSH
}

note bottom of PB
  Connector initiates delivery
  Low latency, subscriber must be ready
end note

package "Pull Delivery" {
    component "Publisher" as LP #4A90D9
    component "Event\nBroker" as LB #F5A623
    component "Subscriber" as LS #5BAE5B
    
    LP -right-> LB : publish
    LS -left-> LB : POLL
    LB -right-> LS : deliver
}

note bottom of LB
  Subscriber requests events
  Handles varying consumer speeds
end note

package "Streaming Delivery" {
    component "Publisher" as SP #4A90D9
    component "Streaming\nBroker" as SB #F5A623
    component "Subscriber" as SS #5BAE5B
    
    SP -right-> SB : publish
    SB <-right-> SS : persistent\nconnection
}

note bottom of SB
  Continuous connection
  Efficient for high-frequency events
end note

@enduml
