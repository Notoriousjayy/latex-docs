@startuml 03-connector-types

skinparam backgroundColor #FFFFFF
skinparam defaultFontName "Helvetica"
skinparam defaultFontSize 12
skinparam shadowing false
skinparam RoundCorner 10

title <b>Peer-to-Peer Connector Types</b>\nCommunication patterns between peers

skinparam rectangle {
  BackgroundColor<<peer>> #10B981
  FontColor<<peer>> #FFFFFF
  BorderColor<<peer>> #059669
}

skinparam package {
  BackgroundColor #F8FAFC
  BorderColor #CBD5E1
  FontStyle bold
}

package "Call-Return" as CR {
  rectangle "Peer A" as cr_a <<peer>>
  rectangle "Peer B" as cr_b <<peer>>
  cr_a -[#3B82F6,bold]-> cr_b : " request "
  cr_b -[#3B82F6,dashed]-> cr_a : " response "
}

package "Async Message" as AM {
  rectangle "Peer C" as am_c <<peer>>
  rectangle "Peer D" as am_d <<peer>>
  am_c -[#F59E0B,bold]-> am_d : " fire & forget "
}

package "Stream" as ST {
  rectangle "Peer E" as st_e <<peer>>
  rectangle "Peer F" as st_f <<peer>>
  st_e =[#8B5CF6,bold]=> st_f : " continuous data flow "
}

package "Multicast" as MC {
  rectangle "Peer G" as mc_g <<peer>>
  rectangle "Peer H" as mc_h <<peer>>
  rectangle "Peer I" as mc_i <<peer>>
  rectangle "Peer J" as mc_j <<peer>>
  mc_g -[#EF4444,bold]-> mc_h : " broadcast "
  mc_g -[#EF4444,bold]-> mc_i : " broadcast "
  mc_g -[#EF4444,bold]-> mc_j : " broadcast "
}

legend right
  |<#3B82F6> <color:#FFFFFF>  Call-Return  </color>| Request/response |
  |<#F59E0B> <color:#FFFFFF>  Message  </color>| Asynchronous, no reply |
  |<#8B5CF6> <color:#FFFFFF>  Stream  </color>| Long-lived data flow |
  |<#EF4444> <color:#FFFFFF>  Multicast  </color>| One-to-many delivery |
end legend
@enduml
