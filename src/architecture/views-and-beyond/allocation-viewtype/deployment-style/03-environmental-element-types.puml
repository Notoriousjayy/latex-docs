@startuml
skinparam backgroundColor #FFFFFF
skinparam defaultFontName Arial
skinparam defaultFontSize 11
skinparam shadowing false

skinparam node {
    BackgroundColor #E3F2FD
    BorderColor #1565C0
    FontColor #0D47A1
}

skinparam package {
    BackgroundColor #FAFAFA
    BorderColor #BDBDBD
}

skinparam cloud {
    BackgroundColor #E8F5E9
    BorderColor #2E7D32
    FontColor #1B5E20
}

title Environmental Elements: The Hosting Platform

package "Computing Infrastructure" {
    node "Physical Servers\n\nBare-metal machines\nwith raw compute" as physical
    
    node "Virtual Machines\n\nSoftware-defined\ncomputers on hypervisors" as vm
    
    node "Container Hosts\n\nKubernetes nodes,\nDocker hosts" as containerHost
    
    cloud "Serverless\nPlatforms\n\nManaged function\nexecution" as serverless
    
    node "Edge Devices\n\nIoT gateways,\nedge servers" as edge
}

package "Supporting Infrastructure" {
    node "Network\n\nRouters, load balancers,\nfirewalls, DNS" as network
    
    node "Storage\n\nSAN, NAS, object\nstorage, block storage" as storage
}

note bottom of edge
  Environmental elements provide:
  Compute capacity, Network connectivity,
  Storage capabilities, Platform services
end note

@enduml
